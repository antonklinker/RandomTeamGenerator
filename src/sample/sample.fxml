<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
   <children>
      <AnchorPane fx:id="mybackground" prefHeight="600.0" prefWidth="800.0">
         <children>
            <TextField fx:id="teamsamount" layoutX="612.0" layoutY="76.0" />
            <Button fx:id="teamsbutton" layoutX="661.0" layoutY="125.0" mnemonicParsing="false" onAction="#generateTeams" prefHeight="25.0" prefWidth="25.0" style="-fx-background-color: grey;" />
            <Label layoutX="21.0" layoutY="49.0" text="Number of players to add" />
            <Button fx:id="playersbutton" layoutX="62.0" layoutY="113.0" mnemonicParsing="false" onAction="#addTextFields" prefHeight="25.0" prefWidth="34.0" style="-fx-background-color: grey;" />
            <Slider fx:id="playersamount" layoutX="19.0" layoutY="77.0" max="8.0" min="2.0" onMouseDragged="#setAmountText" />
            <Label fx:id="playersamounttext" layoutX="75.0" layoutY="98.0" />
            <Label layoutX="641.0" layoutY="46.0" text="Number of teams" />
            <AnchorPane fx:id="team1background" layoutX="230.0" layoutY="290.0" prefHeight="246.0" prefWidth="92.0" style="-fx-background-color: lightgreen;">
               <children>
                  <Label layoutX="19.0" layoutY="14.0" text="Team 1">
                     <font>
                        <Font name="Fira Code Regular" size="15.0" />
                     </font>
                  </Label>
               </children></AnchorPane>
            <AnchorPane fx:id="team2background" layoutX="342.0" layoutY="290.0" prefHeight="246.0" prefWidth="69.0" style="-fx-background-color: lightblue;">
               <children>
                  <Label layoutX="37.0" layoutY="14.0" text="Team 2">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </Label>
               </children></AnchorPane>
            <AnchorPane fx:id="potbackground" layoutX="293.0" layoutY="13.0" prefHeight="239.0" prefWidth="200.0" />
            <Button fx:id="resetbutton" layoutX="717.0" layoutY="561.0" mnemonicParsing="false" onAction="#resetprogram" text="RESET" />
         </children>
      </AnchorPane>
   </children>
</GridPane>
